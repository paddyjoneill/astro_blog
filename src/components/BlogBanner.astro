---
import { Image } from "astro:assets";

interface Props {
  backgroundImage: any;
  title: string;
}

const { backgroundImage, title } = Astro.props;
---

<div class="relative h-64 overflow-hidden">
  <Image
    class="m-0 block h-64 w-full object-cover"
    src={backgroundImage}
    alt="background"
    width="1024"
    transition:name="image"
    loading="eager"
  />
  <div class="absolute inset-0 bg-neutral-900 opacity-75"></div>
  <div class="absolute inset-0 flex items-center justify-center">
    <h1 class="mx-4 text-3xl font-bold text-white" transition:name="title">
      {title}
    </h1>
  </div>
</div>
